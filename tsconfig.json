{
  "compilerOptions": {
    "target": "es5",
    "baseUrl": ".",
    "paths": {
      "types/*": [
        "src/types/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@/*": [
        "src/*"
      ],
      "@admin/*": [
        "src/modules/Admin/*"
      ],
      "@auth/*": [
        "src/modules/Auth/*"
      ],
      "@grammar/*": [
        "src/modules/Admin/Grammar/*"
      ],
      "@orph/*": [
        "src/modules/Admin/Orphography/*"
      ],
      "@store/*": [
        "src/store/*"
      ]
      ,
      "@pages/*": [
        "src/pages/*"
      ]
    },
    "module": "commonjs",
    "allowJs": true,
    "jsx": "preserve",
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
